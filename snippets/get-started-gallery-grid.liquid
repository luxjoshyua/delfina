<div id="popup-{{ collection }}-{{ product.id }}" class="grid-view-item{% unless product.available %} grid-view-item--sold-out{% endunless %} product-card text-center get-started__card"
     data-id="{{ collection }}-{{ product.id }}" 
     data-url="{{ product.url }}"
     data-image="{{ product.featured_image | img_url: '300x300' }}"
     data-title="{{ product.title }}">
<input id="{{ collection | handleize }}-{{ product.title  | handleize }}" type="checkbox" value="Collection: {{ collection }} - {{ product.title }}" name="contact[Collection: {{ collection }} - product {{ forloop.index0 }}]">
<label for="{{ collection | handleize }}-{{ product.title  | handleize }}">
  <div class="get-started__card-status">
    <p>Selected</p>
  </div>
  {% capture img_id %}ProductCardImage-{{ section.id }}-{{ product.id }}{% endcapture %}
  {% capture wrapper_id %}ProductCardImageWrapper-{{ section.id }}-{{ product.id }}{% endcapture %}
  {%- assign img_url = product.featured_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

  {% unless product.featured_image == blank %}
    {% include 'image-style' with image: product.featured_image, width: max_height, height: max_height, small_style: true, wrapper_id: wrapper_id, img_id: img_id %}
  {% endunless %}
  <div class="get-started__flex">
    <div id="{{ wrapper_id }}" class="grid-view-item__image-wrapper product-card__image-wrapper js">
      <div style="padding-top:{% unless product.featured_image == blank %}{{ 1 | divided_by: product.featured_image.aspect_ratio | times: 100}}%{% else %}100%{% endunless %};">
        <img id="{{ img_id }}"
              class="grid-view-item__image lazyload"
              src="{{ product.featured_image | img_url: '300x300' }}"
              data-src="{{ img_url }}"
              data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
              data-aspectratio="{{ product.featured_image.aspect_ratio }}"
              data-sizes="auto"
              alt="">
      </div>
    </div>

    <noscript>
      {% capture image_size %}{{ max_height }}x{{ max_height }}{% endcapture %}
      <img class="grid-view-item__image" src="{{ product.featured_image.src | img_url: image_size, scale: 2 }}" alt="{{ product.featured_image.alt }}" style="max-width: {{ max_height | times: product.featured_image.aspect_ratio }}px;">
    </noscript>

    <div class="h6 grid-view-item__title product-card__title uppercase" aria-hidden="true">{{ product.title }}</div>
  </div>
</label>
</div>
